	//ページTOPに戻る処理
	$(function() {
		// #back-to-topを消す
		$('#back-to-top').hide();

		// スクロールが十分されたらback-to-topを表示、スクロールが戻ったら非表示
		$(window).scroll(function() {
			$('#pos').text($(this).scrollTop());

